<div id="study-time-wrapper">
  <h1>合計学習日数: <%= @sum_date %></h1>
  <h1>合計学習時間: <%= @sum_time %>h</h1>

  <div id="each-day-time">
      <% @study_times.each do |key, values| %>
        <div class="cf">
          <p><%= key[0] %></p>
          <p><%= values.sum { |hash| hash[:time_length]} %>h</p>
          <p><%= link_to 'Show more', study_time_path(key) %></p>
        </div>
      <% end %>
  </div>

  <%= form_with(model: StudyTime.new, local: true, url: {controller: 'study_times', action: 'create' }) do |form| %>

    <div class="field">
      <%= form.number_field :time_length, step: '0.1', placeholder: "学習時間(h)" %>
    </div>

    <div class="field">
      <%= form.date_field :date, value: Time.now.strftime("%Y-%m-%d"), placeholder: "学習日" %>
    </div>

    <div class="field">
      <%= form.text_area :comment, placeholder: "コメント" %>
    </div>

    <div class="actions">
      <%= form.submit "送信" %>
    </div>
  <% end %>
</div>

